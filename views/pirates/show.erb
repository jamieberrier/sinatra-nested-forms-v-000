<h1>PIRATE</h1>

<div class="pirate">
  <h2>Name: <%= @pirate.name %></h2>
  <h3>Height: <%= @pirate.height %></h3>
  <h3>Weight: <%= @pirate.weight %></h3>
</div><br>

<h1>SHIPS</h1>
<% @ships.each.with_index do |ship, index| %>
  <div class="ship">
    <h2>Ship <%= index + 1 %>:</h2>
    <p>Name: <%= ship.name %></p>
    <p>Category: <%= ship.category %></p>
    <p>Booty: <%= ship.booty %></p><br>
  </div><br>
<% end %>
